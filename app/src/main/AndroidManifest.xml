<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.unitec.futbolapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuPrincipalActivity"
            android:label="MenuPrincpal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ConfiguracionActivity"
            android:label="Configuracion"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ClubActivity"
            android:label="Clubs"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PartidoCanchaActivity"
            android:label="Partido Cancha"
            android:screenOrientation="landscape" />
        <activity
            android:name=".EsquemaActivity"
            android:label="Esquemas"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EquipoActivity"
            android:label="@string/title_activity_equipo" >
        </activity>
        <activity
            android:name=".JugadorActivity"
            android:label="@string/title_activity_jugador" >
        </activity>
    </application>

</manifest>
