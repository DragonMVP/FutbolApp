<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tiempo Partido: "
            android:id="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tiempo Partido: "
            android:id="@+id/txtTiempoPartido"
            android:layout_marginLeft="42dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView15"
            android:layout_toEndOf="@+id/textView15"
            android:layout_marginStart="42dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tiempo Balon"
            android:id="@+id/txtTiempoBalon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tiempo Balon: "
            android:id="@+id/textView18"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txtTiempoBalon"
            android:layout_toStartOf="@+id/txtTiempoBalon"
            android:layout_marginRight="63dp"
            android:layout_marginEnd="63dp" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <GridView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnGrid"
                android:stretchMode="columnWidth"
                android:numColumns="10"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="165dp"
                android:layout_marginStart="165dp" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnList"
                android:layout_marginRight="856dp"
                android:layout_marginEnd="856dp"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/btnGrid"
                android:layout_alignEnd="@+id/btnGrid" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/soccerfield"

            android:id="@+id/layoutCancha">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btnPortero"
                android:layout_marginLeft="85dp"
                android:layout_marginStart="85dp"
                android:maxHeight="70dp"
                android:maxWidth="70dp"

                android:background="@drawable/defaultuser"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btnJugador1"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:background="@drawable/defaultuser"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btnPortero"
                android:layout_toEndOf="@+id/btnPortero"
                android:layout_marginLeft="72dp"
                android:layout_marginStart="72dp" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btnJugador2"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:background="@drawable/defaultuser"
                android:layout_alignTop="@+id/btnPortero"
                android:layout_alignLeft="@+id/btnJugador1"
                android:layout_alignStart="@+id/btnJugador1" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btnJugador3"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:background="@drawable/defaultuser"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/btnJugador2"
                android:layout_alignStart="@+id/btnJugador2" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btnJugador4"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:background="@drawable/defaultuser"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btnJugador5"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:background="@drawable/defaultuser"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btnJugador6"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:background="@drawable/defaultuser"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btnJugador7"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:background="@drawable/defaultuser"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/btnJugador8"
                android:layout_alignStart="@+id/btnJugador8" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btnJugador10"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:background="@drawable/defaultuser"
                android:layout_below="@+id/btnJugador5"
                android:layout_alignLeft="@+id/btnJugador9"
                android:layout_alignStart="@+id/btnJugador9" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btnJugador9"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:background="@drawable/defaultuser"
                android:layout_marginLeft="47dp"
                android:layout_marginStart="47dp"
                android:layout_above="@+id/btnJugador5"
                android:layout_toRightOf="@+id/btnJugador7"
                android:layout_toEndOf="@+id/btnJugador7" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btnJugador8"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:background="@drawable/defaultuser"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/btnJugador6"
                android:layout_toEndOf="@+id/btnJugador6"
                android:layout_marginLeft="68dp"
                android:layout_marginStart="68dp" />

        </RelativeLayout>

</LinearLayout>